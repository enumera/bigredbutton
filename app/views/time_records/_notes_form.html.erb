<% unless @time_record.id.nil? %>

<%= form_for @note, url: {action: "create", controller: "notes"}, :remote=> true do |g| %>

	<%= hidden_field_tag "note_task_id" %>

  <div class="field">
    <%= g.label :content, "New note" %><br />
    <%= g.text_area :content, rows:"5", cols:"40", disabled: true, class: "disabled",:placeholder => "Select or create a task to add notes"%>
  </div>
  <div class="actions">
    <%= g.submit "Add note", class: "btn btn-success" %>
  </div>
<% end %>


<ul id="notes">
</ul>

<% end %>

