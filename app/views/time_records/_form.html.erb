

<%= render "clock" %>

<% if !@time_record.nil? %>

  <% if !@task.id.nil?  && !@time_record.id.nil? %>

    <p> Timing for task: <%= @task.description %></p>


    <% elsif !@time_record.id.nil? && @task.id.nil? %>

    <h2>Give your new task a name!</h2>

      <%= form_for @task, :remote=> true, url: {action: "create", controller: "tasks"} do |f| %>


      <%= hidden_field_tag "time_record", @time_record.id %>
       <div class="field">
        <%= f.label :description %><br />
        <%= f.text_field :description %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>

    <% end %>

  <% end %>
<% end %>


<%= form_for @time_record do |f| %>
  <% if @time_record.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@time_record.errors.count, "error") %> prohibited this time_record from being saved:</h2>

      <ul>
      <% @time_record.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <%=hidden_field_tag "operation", @operation %>
  <%=hidden_field_tag "status", @status %>

<% unless @time_record.id.nil? && @tasks.count > 0 %>
  <% if @task.id.nil? %>
    <div class="field">
      <%= label_tag "Select a previous task" %><br />
      <%= select_tag "Task", options_from_collection_for_select(@tasks, "id", "description"), :include_blank => "Select task" %>
    </div>
  <% end %>
<% end %>
<!-- 
    <div id="bigredbutton" class="clickable-div">Time Please!</div> -->


  <div class="actions">

    <% if @operation == "create" %>
    <% buttoncolor = "red" %>
    <% buttontext = "Get Started!" %>
    <% else %>
    <% buttoncolor = "blue "%>
    <% buttontext = "Press to Finish" %>
    <% end %>


    <%= f.submit buttontext, class: "clickable-div #{buttoncolor}", id: "bigredbutton" %>
  </div>
<% end %>


