<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Description</th>
    <th>No. of time records</th>
    <th>Hours spent</th>
    <th>Minutes spent</th>
    <th>No. of notes</th>



    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.description %></td>
    <td><%= task.time_records.count %></td>
    <td><%= task.hours %></td>
    <td><%= task.minutes %></td>
    <td><%= task.notes.count %></td>



    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>

  </tr>
<% end %>
</table>

